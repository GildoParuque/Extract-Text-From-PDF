@{
    ViewBag.Title = "Upload de PDF";
}

<h2>Upload de Arquivo PDF</h2>

<form asp-action="UploadPdf" asp-controller="Home" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Selecione o arquivo PDF:</label>
        <input type="file" name="file" class="form-control" id="file" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Carregar PDF</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">
        @ViewBag.Message
    </div>
}

@if (Model != null)
{
    <div class="mt-3">
        <h3>Dados Extraídos:</h3>
        <p><strong>Solicitante:</strong> @Model.Requestor</p>
        <p><strong>Departamento:</strong> @Model.Department</p>
        <p><strong>Data da Solicitação:</strong> @Model.RequestDate</p>
        <p><strong>Motivo:</strong> @Model.ReasonForRequest</p>
        <p><strong>Autorizado por:</strong> @Model.AuthorizedBy</p>
        <p><strong>Data de Autorização:</strong> @Model.AuthorizationDate</p>
    </div>
}